<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" 
    android:background="@color/player_series_translucent_color">

    <View  android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/player_series_diver_line"/>
    
    <TextView
        android:id="@+id/txt_playser_series"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 -180"
        android:layout_centerInParent="true"
        android:textColor="@color/player_canvas_normal"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_playser_series_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_up" />

</RelativeLayout>
