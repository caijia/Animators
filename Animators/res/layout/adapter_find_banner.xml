<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/banner_content_view">

    <ImageView
        android:id="@+id/find_banner_img_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/defalut_loadimage_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_banner_img_pic"
        android:layout_alignRight="@+id/find_banner_img_pic"
        android:layout_alignTop="@+id/find_banner_img_pic"
        android:layout_alignBottom="@+id/find_banner_img_pic"
        android:background="@drawable/drawable_rank_cover"/>

    <TextView
        android:id="@+id/find_banner_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/find_banner_img_pic"
        android:layout_alignLeft="@+id/find_banner_img_pic"
        android:layout_alignRight="@+id/find_banner_img_pic"
        android:background="@drawable/shape_shadow"
        android:text="Small Text"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
