<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainFragment" xmlns:app="http://schemas.android.com/apk/res/com.cs.animators">

    <com.cs.cj.view.PagerSlidingTabStrip
        android:id="@+id/main_tab_slide"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:pstsShouldExpand="true"
        app:pstsIndicatorColor="@color/indicator_color"
        app:pstsIndicatorHeight="4dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_vpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>