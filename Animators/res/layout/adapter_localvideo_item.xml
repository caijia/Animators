<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/localvideo_img_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/defalut_loadimage_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/localvideo_img_pic"
        android:layout_alignRight="@+id/localvideo_img_pic"
        android:layout_below="@+id/localvideo_img_pic" >

        <TextView
            android:id="@+id/localvideo_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_find_item"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="火影忍者001"
            android:textColor="@color/gray_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/localvideo_txt_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/localvideo_txt_name"
            android:background="@drawable/selector_find_item"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="16:26"
            android:textColor="@color/gray_light"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_light" />
    </RelativeLayout>

</RelativeLayout>