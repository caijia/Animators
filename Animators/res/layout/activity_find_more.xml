<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.cs.animationvideo"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.cs.cj.view.PagerSlidingTabStrip
        android:id="@+id/find_more_tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:pstsIndicatorColor="@color/indicator_color"
        app:pstsIndicatorHeight="4dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/find_more_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/find_more_tab_indicator" />

</RelativeLayout>